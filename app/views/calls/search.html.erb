<div class="row">
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Busqueda de Llamadas</h3>
      </div>
      <div class="panel-body">
      <%= form_tag '/calls/search', :method=>"get" do %>
      <form>
       <div class="form-group">
        <%= label_tag :tipo, 'Seleccione tipo de llamada' %>
        <%= select_tag :tipo, options_for_select(["Seleccionar opcion", "entrante", "saliente"],:disabled => ["Seleccionar opcion"]), :class => 'genForm_dropBox' %>
      </div>
      <div class="form-group">
        <%= label_tag :destino, 'Seleccione destino de llamada' %>
        <%= select_tag :destino, options_for_select(["Seleccionar opcion", "internacional", "nacional", "local","celular"],:disabled => ["Seleccionar opcion"]), :class => 'genForm_dropBox' %>
      </div>


      <%if current_user.admin?%>
      <div class="form-group">
        <%= label_tag :area, "Area" %></br>
        <%= text_field_tag :area, '',required: true, autofocus: true, class:"form-control"%>
       </div>
      <div class="form-group">
        <%=label_tag :sector, "sector" %></br>
        <%= text_field_tag :sector, '',required: true, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :interno, 'Ingrese interno' %>
        <%= number_field_tag :interno, '',autofocus: true, class:"form-control"%>
      </div>
      <%end%>


      <div class="form-group">
        <%= label_tag :fechahini, 'Ingrese fecha inicial' %>
        <%= date_field_tag :fechaini, '',required: true, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :fechafin, 'Ingrese fecha final'%>
        <%= date_field_tag :fechafin, '',required: true, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= submit_tag 'Buscar', class: "btn btn-success btn-block" %>
      </div>
      </form>
      <% end %>
    </div>
  </div>
</div>
</div>


<%= render 'searchoption' %>
  
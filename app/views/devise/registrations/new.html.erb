<div class="row">
  
  <div class="col-md-6 col-md-offset-3">

    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Registrarse</h3>
      </div>
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       

        <form>
         
          <div class="form-group">
            <%= f.label :email, "Email" %></br>
            <%= f.email_field :email, required: true, autofocus: true, class:"form-control" %>
            <% if resource.errors.messages[:email] && !resource.errors.messages[:email].empty? %>
                <%= "El campo esta vacio o el email es invalido" %>
              <%end%>
          </div>

          <div class="form-group">
            <%= f.label :name, "Nombre" %></br>
            <%= f.text_field :name, required: true, autocomplete: "off", class:"form-control" %>
            <% if resource.errors.messages[:name] && !resource.errors.messages[:name].empty? %>
                <%= "El nombre no es válido" %>
              <%end%>
          </div>

          <div class="form-group">
            <%= f.label :area, "Area" %></br>
            <%= collection_select(:user, :area_id, Area.all, :id, :name) %>
            <% if resource.errors.messages[:area] && !resource.errors.messages[:area].empty? %>
                <%= "El area no es válido" %>
              <%end%>
          </div>

          <div class="form-group">
            <%= f.label :password, "Contraseña" %></br>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
              <% end %>
              <%= f.password_field :password, required: true, autocomplete: "off", class:"form-control" %>
              <% if resource.errors.messages[:password] && !resource.errors.messages[:password].empty? %>
                <%= "La Contraseña no es valida " %>
              <%end%>
          </div>

          <div class="form-group">
            <%= f.label :"password_confirmation", "Confirmar Contraseña" %></br>
            <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class:"form-control" %>
            <% if resource.errors.messages[:password_confirmation] && !resource.errors.messages[:password_confirmation].empty? %>
                <%= "La Contraseña no es valida " %>
              <%end%>
          </div>

            <div class="form-group">
              <%= f.label :password_security, "Contraseña de Seguridad" %></br>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
              <% end %>
              <%= f.password_field :password_security, required: true, autocomplete: "off", class:"form-control" %>
              <% if resource.errors.messages[:password_security] && !resource.errors.messages[:password_security].empty? %>
                <%= "La Contraseña de Seguridad no es valida " %>
              <%end%>
          </div>

          <div class="form-group">
              <%= f.submit "Registrarse" , class: "btn btn-success btn-block"%>
          </div>
        </form>
        
        <%end%>
      </div>
    </div>    

  </div>

</div>
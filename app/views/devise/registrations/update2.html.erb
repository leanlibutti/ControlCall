            	<%= collection_select(:user :sector_id, user.area.sectors.all, :id, :name) %>
            	<% if resource.errors.messages[:area] && !resource.errors.messages[:area].empty? %>
                <%= "El area no es vÃ¡lido" %>
              <%end%>
          	</div>


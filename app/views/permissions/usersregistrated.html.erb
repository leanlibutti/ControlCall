
<div class="row">
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Busqueda de Usuarios Registrados</h3>
      </div>
      <div class="panel-body">
      <%= form_tag '/permissions/usersregistrated', :method=>"get" do %>
      <form>
      <div class="form-group">
      <%= label_tag :fechahini, 'Ingrese fecha inicial' %>
      <%= date_field_tag :fechaini, '',required: true, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
      <%= label_tag :fechafin, 'Ingrese fecha final'%>
      <%= date_field_tag :fechafin, '',required: true, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
      <%= submit_tag 'Buscar', class: "btn btn-success btn-block" %>
      </div>
      </form>
      <% end %>
    </div>
  </div>
</div>
</div>




<div class="row">
<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Usuarios Registrados
  </div>
</div>
<% if @registrados.count > 0 %>
<div class="panel panel-success">
  <div class="panel-body">
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>Nombre de Usuario</th>
          <th>Email de Usuario</th>
          <th>Borrar Cuenta</th>
        </tr>
        </thead>

        <tbody>
           <%@registrados.each do |user|%>
            <%if user.permission.activo?%>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                 <td> <li><%= link_to "Borrar Usuario", registration_path(user), data: { confirm: "Esta seguro de borrar a #{user.email}?" }, method: :delete%> </li></td>
              </tr>
            <%end%>
          <% end %>
        </tbody>
      </table>        
      <br>
  </div>
</div>
<%end%>
</div>
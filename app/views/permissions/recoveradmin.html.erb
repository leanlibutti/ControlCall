<div class="row">
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Recuperar Contraseña</h3>
      </div>
      <div class="panel-body">
      <%= form_tag '/permissions/recoveradmin', :method=>"get" do %>
      <form>

       <div class="form-group">
        <%= label_tag :, 'Nueva Contraseña' %>
        <%= password_field_tag :contrasena, required: true, autocomplete: "off", class:"form-control" %>
      </div>

       <div class="form-group">
        <%= submit_tag 'Buscar', class: "btn btn-success btn-block" %>
      </div>

      </form>
      <% end %>
    </div>
  </div>
</div>
</div>